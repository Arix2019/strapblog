<%# partials %>
<%= simple_form_for article do |form| %>
	<div class="form-inputs">
		<%= form.input :title %>
		<%= form.input :body, input_html: { rows: 10 } %>
		<%= form.association :category, collection: Category.sorted, prompt: "Choose a Category" %>
	</div>

	<div class="form-actions">
		<%= form.button :submit, class: 'btn btn-primary' %>
		<%= link_to "Voltar", root_path, class: 'btn btn-secondary' %>
	</div>

<% end %>