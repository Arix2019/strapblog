<article class="blog-post">
  <h2 class="blog-post-title mb-1"> <%= article.title %> </h2>
  <p class="blog-post-meta"> <%= post_format_date(article.created_at) %>
    - by: <%= article.user.email %></p>

  <p> <%= truncate(article.body, length: 150) %> </p>

  <p> <%= link_to 'Continue reading...', article, class: 'btn btn-link' %> </p>

  <%= link_to "Edit", edit_article_path(article),
  class:"btn btn-warning" if policy(article).update? %>
  
  <%= link_to "Destroy", article_path(article),
    method: :delete,
    data:   {confirm: 'VocÃª quer realmente deletar essa postagem?'},
    class:"btn btn-danger" if policy(article).destroy? %>

</article>