<article class="blog-post">
  <h2 class="blog-post-title mb-1"> <%= @article.title %> </h2>
  <p class="blog-post-meta"> <%= post_format_date(@article.created_at) %> by: <%= @article.user.email %></p>

  <p> <%= @article.body %> </p>

  <%= link_to "Editar", edit_article_path(@article), class:"btn btn-warning" %>
  
  <%= link_to "Deletar", article_path(@article),
    method: :delete,
    data:   {confirm: 'VocÃª quer realmente deletar essa postagem?'},
    class:"btn btn-danger"
  %>

  <%= link_to "Voltar", root_path, class: 'btn btn-secondary' %>

</article>